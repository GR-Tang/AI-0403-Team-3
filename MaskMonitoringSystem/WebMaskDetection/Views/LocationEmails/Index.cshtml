@model IEnumerable<WebMaskDetection.Models.LocationEmail>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Location Email Listing</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
            <th>
                Location
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LocationSetting.Location)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.LE_Index">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.LE_Index">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.LE_Index">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

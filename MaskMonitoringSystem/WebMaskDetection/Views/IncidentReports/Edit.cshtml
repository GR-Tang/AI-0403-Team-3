@model WebMaskDetection.Models.IncidentReport

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

<h4>Incident Report</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IncidentIndex" />
            <div class="form-group">
                <label asp-for="LocationIndex" class="control-label">Location</label>
                <select asp-for="LocationIndex" class="form-control" asp-items="ViewBag.LocationIndex"></select>
                <span asp-validation-for="LocationIndex" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IncidentDateTime" class="control-label">Date Time</label>
                <input asp-for="IncidentDateTime" class="form-control" />
                <span asp-validation-for="IncidentDateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Note" class="control-label"></label>
                <input asp-for="Note" class="form-control" />
                <span asp-validation-for="Note" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

